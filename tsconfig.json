{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "EGUI.createElement",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
  },
  "include": [
    "ts","typings"
  ],
  "exclude": []
}